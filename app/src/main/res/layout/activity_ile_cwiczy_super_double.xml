<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.fitandyummy.timetoworkout.ActivityIleCwiczySuperDouble">



    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar_ilebije_no_arrow"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/LLLewy"
            android:layout_below="@+id/toolbar"
            android:layout_weight=".7"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_width="0dp">


            <ImageView
                android:padding="7dp"
                android:id="@+id/button2"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleX="1"
                android:scaleY="1.5"
                android:src="@drawable/start"/>



            <LinearLayout
                android:id="@+id/StopReset"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/savebutton"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:src="@drawable/stop"
                    android:scaleY="1.6"
                    android:onClick="Stop"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    />

                <ImageView
                    android:id="@+id/Reset"

                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:src="@drawable/reset"
                    android:scaleY="1.6"
                    android:onClick="Reset"
                    android:layout_margin="2dp"
                    android:layout_weight="1"


                    />

            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLPrawy"
            android:layout_below="@+id/toolbar"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/telebimLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/period"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/telebimworkRazLinearL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <EditText
                        android:id="@+id/telebimWorkRaz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/czarny"
                        android:hint=" Work One"
                        android:textAlignment="center" />




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/telebimworkDwaLinearL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >


                    <EditText
                        android:id="@+id/telebimWorkDwa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/czarny"
                        android:hint=" Work Two"
                        android:textAlignment="center" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/telebimRestLinearL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >


                    <TextView
                        android:id="@+id/telebimRest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/czarny"
                        android:text=" REST  "
                        android:textSize="15dp"


                        android:textAlignment="center" />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ChonometryLinearL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/workRazLinearL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <Chronometer


                        android:id="@+id/chronoWorkRaz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workDwaLinearL"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <Chronometer


                        android:id="@+id/chronoWorkDwa"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20sp" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/LLchronoRest"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <Chronometer
                        android:id="@+id/chronoRest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:textSize="20sp"
                        android:textAlignment="center"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/linearLayout">




                <LinearLayout
                    android:id="@+id/mainKokpit"

                    android:layout_marginTop="1dp"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"



                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/main_batony"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:orientation="vertical">



                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/workRazRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:alpha="10"
                            android:background="@color/colorPrimaryTransp"
                            android:fadingEdge="horizontal|vertical"
                            tools:alpha="50">
                        </android.support.v7.widget.RecyclerView>





                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_batony2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">







                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/workDwaRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:alpha="10"
                            android:background="@color/colorPrimaryTransp"
                            android:fadingEdge="horizontal|vertical"
                            tools:alpha="50">
                        </android.support.v7.widget.RecyclerView>







                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_batony3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">







                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/restRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:alpha="10"
                            android:background="@color/colorPrimaryTransp"
                            android:fadingEdge="horizontal|vertical"
                            tools:alpha="50">
                        </android.support.v7.widget.RecyclerView>







                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/trzydziesciSOff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trzydziescioff"
                    android:layout_weight="1"
                    android:onClick="onTrzydziesciS"
                    />

                <ImageView
                    android:id="@+id/szescdziesiatSOff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/szescdziesiatoff"
                    android:layout_weight="1"
                    android:onClick="onSzescdziesiatS"

                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>








    <ImageView
        android:id="@+id/tlo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:alpha=".1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/ttwlgo" />




</RelativeLayout>


